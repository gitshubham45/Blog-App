<%- include("partials/header"); -%>
    <h1>Compose</h1>
    <form method="post" action="/compose">
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input id="postTitle" class="form-control" type="text" name="postTitle" placeholder="Post Title"></input>
        </div>

        <div class="form-group">
            <label for="Post">Post</label>
            <textarea id="Post" class="form-control" cols="80" rows="4" name="postBody"
                placeholder="What's on your mind?" required></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>

    <%- include("partials/footer"); -%>